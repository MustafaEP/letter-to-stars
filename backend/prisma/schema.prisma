generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id              String       @id @default(cuid())
  email           String       @unique
  name            String?
  passwordHash    String?
  provider        AuthProvider @default(LOCAL)
  providerId      String?      @unique
  role            UserRole     @default(USER)
  
  // Yeni alanlar
  profilePicture  String?      // URL veya path
  emailVerified   Boolean      @default(false)
  bio             String?      @db.Text
  lastLoginAt     DateTime?
  
  diaries         Diary[]
  refreshTokens   RefreshToken[]
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  @@index([provider, providerId])
  @@index([email])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Yeni alanlar
  userAgent String?  // Browser/device bilgisi
  ipAddress String?  // IP tracking
  
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model Diary {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  originalText   String   @db.Text
  rewrittenText  String   @db.Text
  ieltsLevel     Int
  newWords       Json
  imageUrl       String?
  
  entryDate      DateTime @default(now()) @db.Date
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@unique([userId, entryDate])
  @@index([userId])
  @@index([entryDate])
}